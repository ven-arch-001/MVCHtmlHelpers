                    <li> &nbsp;| Spell Checker</li>
                    <li> &nbsp;| Numeric</li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MVC Control Helpers</p>
        </footer>
    </div>

</body>
</html>
